<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
<RelativeLayout
    android:id="@+id/layoutQuestion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:paddingBottom="8dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/textViewQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question"
            android:paddingBottom="12dp" />

        <View
            android:background="#ff222222"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textIsSelectable="true"
                android:layout_weight="1"
                android:text="示例输入" />

            <View
            	android:background="#ff888888"
                android:layout_width="1dp"
                android:layout_height="32dp" />
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textIsSelectable="true"
                android:layout_weight="1"
                android:text="示例输出" />

        </LinearLayout>

        <View
            android:background="#ff888888"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:typeface="monospace"
    			android:id="@+id/textViewInput1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textIsSelectable="true"
                android:layout_weight="1"
                android:text="1" />

            <View
            	android:background="#ff888888"
                android:layout_width="1dp"
                android:layout_height="32dp" />
            
            <TextView
                android:typeface="monospace"
    			android:id="@+id/textViewOutput1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textIsSelectable="true"
                android:layout_weight="1"
                android:text="1" />

        </LinearLayout>

        <View
            android:background="#ff888888"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:typeface="monospace"
    			android:id="@+id/textViewInput2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textIsSelectable="true"
                android:layout_weight="1"
                android:text="2" />

            <View
            	android:background="#ff888888"
                android:layout_width="1dp"
                android:layout_height="32dp" />
            
            <TextView
                android:typeface="monospace"
    			android:id="@+id/textViewOutput2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textIsSelectable="true"
                android:layout_weight="1"
                android:text="2" />

        </LinearLayout>

        <View
            android:background="#ff888888"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:typeface="monospace"
    			android:id="@+id/textViewInput3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textIsSelectable="true"
                android:layout_weight="1"
                android:text="3" />

            <View
            	android:background="#ff888888"
                android:layout_width="1dp"
                android:layout_height="32dp" />
            
            <TextView
                android:typeface="monospace"
    			android:id="@+id/textViewOutput3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textIsSelectable="true"
                android:layout_weight="1"
                android:text="3" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(请不要输出任何多余内容，比如'请输入A的值:'。任何多余的内容都会被判定为错误)"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/buttonPreQuestion"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上一题" />

            <Button
                android:id="@+id/buttonAnswer"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="答案" />

            <Button
                android:id="@+id/buttonNextQuestion"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下一题" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
</ScrollView>
